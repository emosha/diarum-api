{
  "name": "diarum-api",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/iverenshaguy/diarum-api.git",
  "author": "Iveren Shaguy <iverenshaguy@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "dotenv -e env/dev.env -- nodemon src/index.js --ext js,graphql --exec babel-node",
    "debug": "dotenv -e env/dev.env -- nodemon src/index.js --ext js,graphql --exec babel-node --inspect",
    "build": "babel src --out-dir dist --copy-files",
    "test": "dotenv -e env/test.env jest --watch --runInBand",
    "test:commit": "yarn test --coverage",
    "lint": "eslint \"**/*.js\" --fix",
    "get-schema": "graphql get-schema -p database --dotenv env/dev.env",
    "deploy-db": "cd database && prisma deploy -e ../env/dev.env && cd .. && yarn get-schema",
    "heroku-postbuild": "yarn build"
  },
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bcryptjs": "^2.4.3",
    "cross-fetch": "^3.0.0",
    "dotenv": "^6.2.0",
    "dotenv-cli": "^1.4.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.11.0",
    "graphql": "^0.13.2",
    "graphql-cli": "^3.0.4",
    "graphql-newest": "npm:graphql",
    "graphql-yoga": "^1.16.9",
    "graphql-yup-middleware": "^0.0.1",
    "jsonwebtoken": "^8.4.0",
    "merge-graphql-schemas": "^1.5.8",
    "prisma": "^1.24.0",
    "prisma-binding": "^2.2.14",
    "prisma-client-lib": "^1.24.0",
    "yup": "^0.26.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.3.1",
    "@commitlint/config-conventional": "^7.3.1",
    "apollo-boost": "^0.1.14",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-client": "^2.4.2",
    "apollo-link": "^1.2.3",
    "apollo-link-error": "^1.1.1",
    "apollo-link-http": "^1.5.5",
    "apollo-link-ws": "^1.0.9",
    "apollo-utilities": "^1.0.21",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "codecov": "^3.1.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "regenerator-runtime": "^0.13.1",
    "subscriptions-transport-ws": "^0.9.15"
  },
  "resolutions": {
    "graphql-yoga/**/graphql": "^0.13.1",
    "prisma-binding/**/graphql": "^0.13.2",
    "graphql-cli/**/graphql": "^0.13.0",
    "graphql-yoga/graphql-middleware": "^1.7.0"
  }
}
